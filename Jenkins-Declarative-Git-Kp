pipeline{
    agent any
    environment{
        PATH = "/opt/maven/bin:$PATH"
    }
    stages{
        stage("Git Checkout"){
            steps{
            git credentialsId: 'github', url: 'https://github.com/kpreddy87/myweb'
            }
        }
        stage ("Java") {
                tools {
                   jdk "java-11-openjdk-amd64"
                }
                steps {
                    sh 'java -version'
                }
            }
         stage("Maven Build"){
            steps{
                sh "mvn clean package"
               
            }
        }
    }
}
